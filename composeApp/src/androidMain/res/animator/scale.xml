        android:propertyName="scaleX"
        android:repeatCount="infinite"
        android:valueType="floatType">
        <propertyValuesHolder android:propertyName="scaleX">
            <keyframe
                android:fraction="0"
                android:value="0.6666667" />
            <keyframe
                android:fraction="0.24"
                android:value="1.0" />
            <keyframe
                android:fraction="0.42"
                android:value="0.6666667" />
            <keyframe
                android:fraction="0.58"
                android:value="1.0" />
