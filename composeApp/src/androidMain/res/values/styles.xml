<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Notification text styles -->
    <style name="NotificationHeartRateValue">
        <item name="android:textColor">@color/notification_heart_rate_color</item>
        <item name="android:textSize">@dimen/font_size_20</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="NotificationUnitText">
        <item name="android:textColor">@color/notification_secondary_text_color</item>
        <item name="android:textSize">@dimen/font_size_12</item>
    </style>

    <style name="NotificationStatusText">
        <item name="android:textColor">@color/notification_secondary_text_color</item>
        <item name="android:textSize">@dimen/font_size_14</item>
    </style>

    <style name="NotificationTrackingStatus" parent="NotificationStatusText">
        <item name="android:textColor">@color/notification_tracking_active_color</item>
    </style>

    <style name="NotificationDeviceText">
        <item name="android:textColor">@color/notification_secondary_text_color</item>
        <item name="android:textSize">@dimen/font_size_12</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="NotificationIcon">
        <item name="android:layout_width">@dimen/notification_icon_size</item>
        <item name="android:layout_height">@dimen/notification_icon_size</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/ic_heart</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="NotificationBatteryIcon">
        <item name="android:layout_width">@dimen/notification_battery_icon_width</item>
        <item name="android:layout_height">@dimen/notification_battery_icon_height</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:importantForAccessibility">no</item>
    </style>
</resources>

